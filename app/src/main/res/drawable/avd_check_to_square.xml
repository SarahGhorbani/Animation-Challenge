<animated-vector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
    <aapt:attr name="android:drawable">
        <vector
            android:name="vector"
            android:width="48dp"
            android:height="48dp"
            android:viewportWidth="48"
            android:viewportHeight="48">
            <path
                android:name="shadow"
                android:pathData="M 44 16 L 44 40 C 44 43 42 44 40 44 L 8 44 C 6 44 4 43 4 40 L 4 8 C 4 6 6 4 8 4 L 40 4 C 42 4 44 6 44 8 L 44 16"
                android:strokeColor="#bbbbbb"
                android:strokeWidth="4"/>
            <path
                android:name="square"
                android:pathData="M 44 16 L 44 40 C 44 43 42 44 40 44 L 8 44 C 6 44 4 43 4 40 L 4 8 C 4 6 6 4 8 4 L 40 4 C 42 4 44 6 44 8 L 44 16"
                android:strokeColor="#000000"
                android:strokeWidth="4"/>
            <path
                android:name="trim_square"
                android:pathData="M 44 16 L 44 40 C 44 43 42 44 40 44 L 8 44 C 6 44 4 43 4 40 L 4 8 C 4 6 6 4 8 4 L 40 4 C 42 4 44 6 42 4.5"
                android:strokeColor="#000000"
                android:strokeWidth="4"
                android:strokeLineCap="round"/>
            <path
                android:name="check"
                android:pathData="M 42 6 L 22 31 L 15 24"
                android:strokeColor="#000000"
                android:strokeWidth="4"
                android:trimPathStart="0.25"
                android:strokeLineCap="round"
                android:strokeLineJoin="round"/>
        </vector>
    </aapt:attr>
    <target android:name="shadow">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:propertyName="strokeWidth"
                    android:startOffset="1483"
                    android:duration="488"
                    android:valueFrom="4"
                    android:valueTo="2"
                    android:valueType="floatType"
                    android:interpolator="@android:interpolator/fast_out_slow_in"/>
                <objectAnimator
                    android:propertyName="strokeColor"
                    android:startOffset="1483"
                    android:duration="488"
                    android:valueFrom="#bbbbbb"
                    android:valueTo="#dddddd"
                    android:valueType="colorType"
                    android:interpolator="@android:interpolator/fast_out_slow_in"/>
            </set>
        </aapt:attr>
    </target>
    <target android:name="square">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="strokeAlpha"
                android:startOffset="350"
                android:duration="190"
                android:valueFrom="1"
                android:valueTo="0"
                android:valueType="floatType"
                android:interpolator="@android:interpolator/fast_out_slow_in"/>
        </aapt:attr>
    </target>
    <target android:name="trim_square">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:propertyName="trimPathEnd"
                    android:startOffset="400"
                    android:duration="350"
                    android:valueFrom="1"
                    android:valueTo="0"
                    android:valueType="floatType"
                    android:interpolator="@android:anim/decelerate_interpolator"/>
                <objectAnimator
                    android:propertyName="trimPathStart"
                    android:startOffset="290"
                    android:duration="350"
                    android:valueFrom="1"
                    android:valueTo="0"
                    android:valueType="floatType"
                    android:interpolator="@android:anim/decelerate_interpolator"/>
            </set>
        </aapt:attr>
    </target>
    <target android:name="check">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:propertyName="trimPathEnd"
                    android:duration="200"
                    android:valueFrom="1"
                    android:valueTo="0.25"
                    android:valueType="floatType"
                    android:interpolator="@android:anim/linear_interpolator"/>
                <objectAnimator
                    android:propertyName="trimPathEnd"
                    android:startOffset="200"
                    android:duration="100"
                    android:valueFrom="0.25"
                    android:valueTo="0"
                    android:valueType="floatType"
                    android:interpolator="@android:anim/linear_interpolator"/>
                <objectAnimator
                    android:propertyName="trimPathStart"
                    android:startOffset="170"
                    android:duration="80"
                    android:valueFrom="0.25"
                    android:valueTo="0"
                    android:valueType="floatType"
                    android:interpolator="@android:anim/linear_interpolator"/>
            </set>
        </aapt:attr>
    </target>
</animated-vector>